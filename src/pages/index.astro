---
import Layout from '../layouts/Layout.astro';

const links = [
  { label: "Paragraph", href: "https://paragraph.com/@susanagomes@cachicamo.studio", rel: "noreferrer" },
  { label: "Mastodon", href: "https://mastodon.social/@susanagomes", rel: "me noreferrer" },
];
---

<Layout title="Susana Gomes">
  <section class="hero">
    <!-- Background Image -->
    <img
      src="/hero.png"
      alt="Susana Gomes"
      class="hero-bg"
    />

    <!-- Dark overlay -->
    <div style="position: absolute; inset: 0; background: rgba(0,0,0,0.2); z-index: 1;"></div>

    <header class="topbar">
      <a class="brand" href="/">Susana Gomes</a>
      <a class="toplink" href="/about">About</a>
    </header>
    <div class="hero-content">
      <h1 class="hero-text">
        construyendo mi<br />
        propio<br />
        universo digital.
      </h1>
    </div>
    <nav class="bottom-links" aria-label="Links principales">
      {links.map((l) => (
        <a class="pill" href={l.href} target={l.href.startsWith("http") ? "_blank" : undefined} rel={l.rel}>
          {l.label}
          <span class="underline" aria-hidden="true"></span>
        </a>
      ))}
    </nav>
    <div class="scroll-hint" aria-hidden="true">â†“</div>
  </section>
</Layout>

<style>
@font-face {
  font-family: 'Last Day On Earth';
  src: url('/fonts/LastDayOnEarth.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

.hero {
  min-height: 100vh;
  position: relative;
  display: grid;
  align-items: center;
  padding: 28px;
  overflow: hidden;
}
/* Background image with zoom animation */
.hero-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
  animation: slowZoom 20s ease-in-out infinite alternate;
}
@keyframes slowZoom{
  from { transform: scale(1); }
  to   { transform: scale(1.05); }
}
/* Top bar */
.topbar{
  position: absolute;
  top: 20px;
  left: 20px;
  right: 20px;
  display:flex;
  justify-content: space-between;
  align-items:center;
  z-index: 2;
}
.brand{
  font-family: 'nickel-gothic-variable', sans-serif;
  font-size: 48px;
  font-weight: 400;
  letter-spacing: 1px;
  opacity: 0;
  transform: translateY(-6px);
  animation: brandIn 900ms ease forwards;
  animation-delay: 120ms;
  text-decoration: none;
  color: white;
  transition: opacity 300ms ease;
}
.brand:hover{
  opacity: 0.8;
}
@keyframes brandIn{
  to { opacity: 1; transform: translateY(0); }
}
.toplink{
  font-size: 16px;
  opacity: 0.85;
  text-decoration: none;
  color: rgba(255,255,255,0.85);

  /* Glassmorphism */
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px) saturate(180%);
  -webkit-backdrop-filter: blur(10px) saturate(180%);
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 8px 16px;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.15);
  transition: all 300ms ease;
}
.toplink:hover{
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.35);
  opacity: 1;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15), inset 0 1px 0 rgba(255, 255, 255, 0.25);
}
/* Hero text entrance */
.hero-content{
  position: absolute;
  bottom: 100px;
  right: 40px;
  z-index: 2;
  max-width: 600px;
  text-align: right;
}
.hero-text{
  opacity: 0;
  transform: translateY(12px);
  animation: fadeUp 1200ms cubic-bezier(.2,.8,.2,1) forwards;
  animation-delay: 260ms;
  font-family: 'strelka', sans-serif;
  font-size: clamp(48px, 6vw, 88px);
  line-height: 1.0;
  font-weight: 900;
  font-style: normal;
  letter-spacing: -0.5px;
  color: #ffffff;
}
@keyframes fadeUp{
  to { opacity: 1; transform: translateY(0); }
}
/* Bottom left links */
.bottom-links{
  position: absolute;
  left: 20px;
  bottom: 20px;
  display:flex;
  gap: 10px;
  z-index: 2;
  opacity: 0;
  transform: translateY(8px);
  animation: bottomIn 900ms ease forwards;
  animation-delay: 520ms;
}
@keyframes bottomIn{
  to { opacity: 1; transform: translateY(0); }
}
.pill{
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 11px 22px;
  border-radius: 999px;
  font-family: 'oxanium', sans-serif;
  font-size: 13px;
  font-weight: 400;
  letter-spacing: 0.8px;
  text-transform: uppercase;
  text-decoration: none;
  color: rgba(255, 255, 255, 0.95);

  /* Apple liquid glass */
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20px) saturate(180%) brightness(1.1);
  -webkit-backdrop-filter: blur(20px) saturate(180%) brightness(1.1);
  border: 1px solid rgba(255, 255, 255, 0.25);
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.15),
    0 8px 32px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.35),
    inset 0 -1px 0 rgba(255, 255, 255, 0.05);
  transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
}
.pill:hover{
  transform: translateY(-2px) scale(1.02);
  background: rgba(255, 255, 255, 0.14);
  border-color: rgba(255, 255, 255, 0.4);
  box-shadow:
    0 4px 16px rgba(0, 0, 0, 0.2),
    0 12px 40px rgba(0, 0, 0, 0.12),
    inset 0 1px 0 rgba(255, 255, 255, 0.5),
    inset 0 -1px 0 rgba(255, 255, 255, 0.08);
}
/* underline animation */
.pill .underline{
  position: absolute;
  left: 14px;
  right: 14px;
  bottom: 6px;
  height: 1px;
  background: rgba(255,255,255,0.75);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 260ms ease;
  opacity: 0.8;
}
.pill:hover .underline{
  transform: scaleX(1);
}
/* Mobile responsive */
@media (max-width: 600px) {
  .hero {
    padding: 20px;
  }
  .topbar {
    top: 16px;
    left: 16px;
    right: 16px;
  }
  .brand {
    font-size: 32px;
    letter-spacing: 1px;
  }
  .toplink {
    font-size: 14px;
    padding: 6px 12px;
  }
  .hero-content {
    bottom: 120px;
    right: 16px;
    left: 16px;
    max-width: 100%;
    text-align: right;
  }
  .hero-text {
    font-size: clamp(42px, 11vw, 64px);
    line-height: 1.0;
  }
  .bottom-links {
    left: 16px;
    bottom: 16px;
    gap: 8px;
  }
  .pill {
    font-size: 13px;
    padding: 9px 16px;
  }
  .scroll-hint {
    display: none;
  }
}

/* Scroll hint */
.scroll-hint{
  position: absolute;
  left: 50%;
  bottom: 18px;
  transform: translateX(-50%);
  opacity: 0.65;
  animation: pulse 1.8s ease-in-out infinite;
  z-index: 2;
  font-size: 18px;
}
@keyframes pulse{
  0%,100%{ transform: translateX(-50%) translateY(0); opacity: .55; }
  50%{ transform: translateX(-50%) translateY(6px); opacity: .85; }
}
</style>